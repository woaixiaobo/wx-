/* pages/index/index.wxss */
/* 轮播 */
/* .indexContianer{
  height: 100%;
} */
.navSwiper{
  width: 100%;
  height: 300rpx;
}
.navSwiper image{
  width: 100%;
  height: 100%;
}
/* 导航 */
.navContainer{
  display: flex;
}
.navItem{
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  border-radius: 50%;
  background: rgb(240, 19, 19);
  text-align: center;
  line-height: 100rpx;
  font-size: 50rpx;
  color: white;
  margin: 20rpx 0;
}
.navItem text{
  font-size: 26rpx;
}

/* 推荐歌曲 */
.recommendContainer{
  padding: 40rpx 20rpx;
}
/* 头部 */
.recommendContainer .header .title{
  font-size: 28rpx;
  color: #333;
}
.recommendContainer .header .right{
  float: right;
  border: 1px solid #999;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
}
/* 内容区域，滑块 */
.scrollContainer{
  display: flex;
  margin-top: 30rpx;
  height: 300rpx;

}
.scrollContainer .scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
}
.scrollContainer image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text{
  display: block;
  font-size: 26rpx;
  /* 当行文本溢出用省略号 */
  /* white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
  /* 多行文本溢出 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 热歌风向标 */
.mulsicSwiper{
  height: 460rpx;
}
.muliscContainer{
  padding: 40rpx 20rpx;
}
.mulsicSwiper .swiperItem{
  height: 460rpx;
}
.muliscContainer .header .title{
  font-size: 28rpx;
  color: #333;
}
.muliscContainer .header .right{
  float: right;
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  border: 1px solid #999;
  border-radius: 10rpx;
}

.muliscContainer .mulsicSwiper .title{
  font-size: 28rpx;
  line-height: 80rpx;
}
.muliscContainer .mulsicContent{
  margin-top: 20rpx;
  display: flex;
  width: 96%;
}
.muliscContainer .mulsicSwiper image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.muliscContainer .mulsicContent .number{
  font-weight: bold;
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.muliscContainer .mulsicContent .text{
  line-height: 100rpx;
}
